<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
tools:context="kr.blogspot.shinism1223.myappportfolio.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/my_nanodegree_apps"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_title"
            android:layout_marginBottom="@dimen/margin_bottom_title"
            />

        <Button
        style="@style/CustomButtonStyle"
        android:text="@string/popular_movies"
        android:id="@+id/button1"
        android:onClick="onButton1Clicked"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView"/>

        <Button
        style="@style/CustomButtonStyle"
        android:text="@string/stock_hawk"
        android:id="@+id/button2"
        android:onClick="onButton2Clicked"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button1" />

        <Button
            style="@style/CustomButtonStyle"
            android:text="@string/build_it_bigger"
            android:id="@+id/button3"
            android:onClick="onButton3Clicked"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/button2" />

        <Button
            style="@style/CustomButtonStyle"
            android:text="@string/make_your_app"
            android:id="@+id/button4"
            android:onClick="onButton4Clicked"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/button3" />

        <Button
            style="@style/CustomButtonStyle"
            android:text="@string/go_ubiquitous"
            android:id="@+id/button5"
            android:onClick="onButton5Clicked"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/button4" />

        <Button
            style="@style/CustomButtonStyle"
            android:text="@string/capstone"
            android:id="@+id/button6"
            android:onClick="onButton6Clicked"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/button5" />

    </RelativeLayout>

</ScrollView>